<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_casilla_monto">

    <!-- Reporte -->
    <TextView
        android:id="@+id/textViewCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="0dp"
        android:text="Cod: 1231312313123"
        android:textColor="#A9A9A9"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporte:  "
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProblema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Problema en la aplicación..."
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginRight="8dp" />
    </LinearLayout>

    <!-- Descripción del reporte -->
    <EditText
        android:id="@+id/textViewDescripcion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="hola"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:maxLength="200"/>

    <!-- Fecha del reporte -->
    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="16dp"
        android:text="Fecha: 17/06/2024 8:50 am"
        android:textColor="#A9A9A9"
        android:textSize="12sp" />

    <!-- Botón Aceptar -->
    <Button
        android:id="@+id/buttonAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textColor="#ffffff"
        android:backgroundTint="#0000FF"/>
</LinearLayout>
