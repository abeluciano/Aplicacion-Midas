<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_fondo_reporte"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idReporte"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="idreporte"
            android:textColor="@color/gris_textos"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/btnCopiar"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/fondo_admin"
            app:srcCompat="@drawable/item_copiar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tipo reporte:"
            android:textColor="@color/gris_textos"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/typeReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tipoReporte"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Estado(cambiar color)"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Respuesta:"
        android:textColor="@color/gris_textos" />

    <TextView
        android:id="@+id/respuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respuesta escrita"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fechayhora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Fecha y Hora"
        android:textColor="@color/gris_textos"
        android:textSize="14sp" />


</LinearLayout>