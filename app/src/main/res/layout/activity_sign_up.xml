<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/idUsuarioEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DNI (8 caracteres)"
        android:inputType="number"
        android:maxLength="8" />

    <EditText
        android:id="@+id/nombreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/correoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/contrase単aEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase単a"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etxtConfirmarContrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar contrase単a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6A1B1B"
        android:text="Registrarse" />

</LinearLayout>
